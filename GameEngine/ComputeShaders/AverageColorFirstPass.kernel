#version 430 core

uniform layout (location = 0) sampler2D colorBuffer;

// buffer to fill that contains per tile depth informations
layout(std430, binding = 0) buffer averageColorBuffer
{
	vec4	avgColor;
};

// we use 16 * 16 threads groups
layout (local_size_x = 1, local_size_y = 1) in;

void	main()
{
	avgColor = texture(colorBuffer, vec2(0.5f));
}