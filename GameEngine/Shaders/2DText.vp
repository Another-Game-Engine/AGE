#version 330

uniform sampler2D fTexture0;

layout (location = 0) in vec4 vPosition;
layout (location = 1) in vec4 vColor;
layout (location = 2) in vec4 vNormal;
layout (location = 3) in vec2 vTexCoord;

out vec4 fPosition;
out vec4 fColor;
out vec4 fNormal;
out vec2 fTexCoord;

void main(void)
{
  fColor = vColor;
  fPosition = vPosition;
  fTexCoord = vTexCoord;
  fNormal = vNormal;
  gl_Position = vPosition;
}