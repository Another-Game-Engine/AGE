#version 430

layout (std140) uniform PerFrame
{
	mat4 projection;
	mat4 view;
	int	lightNbr;
	float time;
};

in vec2 pos;
in vec2 uv;

out vec2 vUv;

void main ()
{
	// interpolate texture coordinates
	vUv = uv;
	// transform vertex position to clip space (camera view and perspective)
	gl_Position = projection * view * vec4(pos, 0.0, 1.0);
}